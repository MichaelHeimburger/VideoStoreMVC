@model MovieRentalMVC.Models.CustomerSearchViewModel    
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>
<div class="form-horizontal">
    <h4>Customer</h4>
    <div class="form-group">
        @Html.LabelFor(model => model.SearchText, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SearchText, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SearchText, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-6"></div>
    <div class="col-6"></div>
</div>
     @foreach (var item in Model.Result) {

<div class="row">
    <div class="col">
        @Html.DisplayFor(modelItem => item.FirstName)

        @Html.DisplayFor(modelItem => item.LastName)
    </div>
    <div class="row">
        @foreach (var movie in item.CurrentRentedMovies) //Display each movie that is currerntly rented  by the customer
        {
        <div class="col">
            @Html.DisplayFor(modelItem => movie.Title)
        </div>
        }
    </div>
</div>
}